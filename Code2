<body>

<div class="content">
    <h1>Hi Silmy <img class="inline-heart" src="https://i.imgur.com/9rQ5H4n.png"></h1>
    <p>I have a very important question for you...</p>
    <p>Will you be my Valentine? <img class="inline-heart" src="https://i.imgur.com/9rQ5H4n.png"></p>

    <button id="yesBtn">Yes <img class="inline-heart" src="https://i.imgur.com/9rQ5H4n.png"></button>
    <button id="noBtn">No <img class="inline-heart" src="https://i.imgur.com/9rQ5H4n.png"></button>

    <div id="message"></div>
</div>

<script>
let noClickCount = 0;
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const message = document.getElementById("message");

// NO button behavior
noBtn.addEventListener("click", function() {
    noClickCount++;
    if (noClickCount < 5) {
        noBtn.style.transform = "scale(" + (1 - noClickCount * 0.15) + ")";
        message.innerHTML = "Thinking... Are you really sure Silmy? <img class='inline-heart' src='https://i.imgur.com/9rQ5H4n.png'>";
    } else {
        message.innerHTML = "The No button has given up <img class='inline-heart' src='https://i.imgur.com/9rQ5H4n.png'>";
        noBtn.style.display = "none";
    }
});

// YES button behavior
yesBtn.addEventListener("click", function() {
    message.innerHTML = "Loading... thinking about you <img class='inline-heart' src='https://i.imgur.com/9rQ5H4n.png'>";
    setTimeout(function() {
        message.innerHTML = "Yay Silmy! <img class='inline-heart' src='https://i.imgur.com/9rQ5H4n.png'><br>You made me the happiest! I love you forever <img class='inline-heart' src='https://i.imgur.com/9rQ5H4n.png'>";
    }, 2500);
});

// Floating heart images
function createHeart() {
    const heart = document.createElement("img");
    heart.src = "https://i.imgur.com/9rQ5H4n.png"; // small heart image
    heart.classList.add("heart");
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.width = (Math.random() * 25 + 15) + "px";
    document.body.appendChild(heart);

    setTimeout(() => { heart.remove(); }, 5000);
}

// Generate hearts continuously
setInterval(createHeart, 500);
</script>

</body>
</html>
